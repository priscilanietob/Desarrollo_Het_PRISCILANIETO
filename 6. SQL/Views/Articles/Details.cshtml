@model Blog.Models.ArticleDetailsViewModel

@{
    ViewData["Title"] = "Article Details";
}

<h1>@Model.Article.Title</h1>

<div class="mb-4">
    <p><strong>Author:</strong> @Model.Article.AuthorName (@Model.Article.AuthorEmail)</p>
    <p><strong>Published:</strong> @Model.Article.PublishedDate.ToString("yyyy-MM-dd")</p>
    <p>@Model.Article.Content</p>
</div>

<hr />

<h2>Comments</h2>

<!-- Formulario para agregar un comentario -->
<form asp-action="AddComment" asp-route-articleId="@Model.Article.Id" method="post" class="mb-4">
    <div class="mb-3">
        <label for="Content" class="form-label">Add a comment</label>
        <textarea name="Content" class="form-control" rows="3" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Post Comment</button>
</form>

<!-- Lista de comentarios existentes -->
@if (Model.Comments != null && Model.Comments.Any())
{
    <ul class="list-group">
        @foreach (var comment in Model.Comments)
        {
            <li class="list-group-item">
                @comment.Content
                <br />
                <small class="text-muted">Posted on @comment.PublishedDate.ToString("yyyy-MM-dd HH:mm")</small>
            </li>
        }
    </ul>
}
else
{
    <p class="text-muted">No comments yet.</p>
}
