<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NumericSeries</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NumericSeries.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Series Numéricas</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="Series"
                           asp-action="Index"
                           asp-route-series="Natural"
                           asp-route-n="0">Naturales</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="Series"
                           asp-action="Index"
                           asp-route-series="Fibonacci"
                           asp-route-n="0">Fibonacci</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="Series"
                           asp-action="Index"
                           asp-route-series="Factorial"
                           asp-route-n="0">Factorial</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="Series"
                           asp-action="Index"
                           asp-route-series="Pares"
                           asp-route-n="0">Pares</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="Series"
                           asp-action="Index"
                           asp-route-series="Primos"
                           asp-route-n="0">Primos</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - NumericSeries - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
